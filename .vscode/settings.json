{
  // Sweetpad formatter
  "sweetpad.format.path": "swiftformat",
  "sweetpad.format.args": ["--quiet", "${file}"],

  // Setup .swift formatter
  "[swift]": {
    "editor.defaultFormatter": "sweetpad.sweetpad"
  },

  // Show folder names in file tabs
  "workbench.editor.labelFormat": "short",
  "editor.formatOnSave": true,

  // Spell check
  "cSpell.enabledFileTypes": {
    "swift": true
  },
  "cSpell.words": ["Deinitialization", "GRDB"],

  // Protocol Buffers
  "protoc": {
    "compile_on_save": false,
    "options": ["--proto_path=${workspaceRoot}/proto"]
  },

  // Swift Path
  "sweetpad.build.xcodeWorkspacePath": "apple/Inline.xcodeproj/project.xcworkspace"
}
