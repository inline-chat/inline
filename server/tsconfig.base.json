{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false, // had to disable this because of annoying issues
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,

    // Monorepo
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",

    "moduleDetection": "force",

    // Best practices
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,

    "paths": {
      "@in/server": ["./src"],
      "@in/server/*": ["./src/*"],
      "@in/protocol": ["../packages/protocol/src"],
      "@in/protocol/*": ["../packages/protocol/src/*"],
      "@inline-chat/protocol": ["../packages/protocol/src"],
      "@inline-chat/protocol/*": ["../packages/protocol/src/*"],
      "@inline-chat/bot-api-types": ["../packages/bot-api-types/src/index.ts"],
      "@inline-chat/bot-api-types/*": ["../packages/bot-api-types/src/*"],
      "@inline-chat/oauth-core": ["../packages/oauth-core/src/index.ts"],
      "@inline-chat/oauth-core/*": ["../packages/oauth-core/src/*"]
    }
  }
}
