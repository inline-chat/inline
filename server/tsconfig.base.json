{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false, // had to disable this because of annoying issues
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,

    // Monorepo
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    "moduleDetection": "force",

    // Best practices
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,

    "paths": {
      "@in/server": ["./src"],
      "@in/server/*": ["./src/*"],
      "@in/protocol": ["./packages/protocol/src"],
      "@in/protocol/*": ["./packages/protocol/src/*"]
    }
  }
}
